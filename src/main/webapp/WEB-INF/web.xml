<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>Student</servlet-name>
		<servlet-class>by.liba.student.webservlet.Student</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Student</servlet-name>
		<url-pattern>/student</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>StudentAll</servlet-name>
		<servlet-class>by.liba.student.webservlet.StudentAll</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentAll</servlet-name>
		<url-pattern>/studentAll</url-pattern>
	</servlet-mapping>
	
	
	<servlet-mapping>
		<servlet-name>Professors</servlet-name>
		<url-pattern>/professors</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Professors</servlet-name>
		<servlet-class>by.liba.student.webservlet.Professor</servlet-class>
	</servlet>



	<servlet>
		<servlet-name>Marks</servlet-name>
		<servlet-class>by.liba.student.webservlet.Mark</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Marks</servlet-name>
		<url-pattern>/marks</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>by.liba.student.webservlet.StudentsContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>by.liba.student.webservlet.MarkContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>by.liba.student.webservlet.ProfessorsContextListener</listener-class>
	</listener>
	<context-param>
		<param-name>student.file.path</param-name>
		<param-value>D:\\resour\\student.csv</param-value>
	</context-param>
	<context-param>
		<param-name>mark.file.path</param-name>
		<param-value>D:\\resour\\marks.csv</param-value>
	</context-param>
	<context-param>
		<param-name>professor.file.path</param-name>
		<param-value>D:\\resour\\professor.csv</param-value>
	</context-param>
</web-app>
